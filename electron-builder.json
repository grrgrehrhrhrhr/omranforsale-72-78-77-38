{
  "appId": "com.omran.sales.offline",
  "productName": "عمران للمبيعات - نسخة أوف لاين",
  "artifactName": "omran-sales-offline-${version}-${arch}.${ext}",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron.js",
    "electron-preload.js",
    "src/utils/localDatabase.js",
    "public/favicon.ico",
    "public/omran-latest-logo.png",
    "!node_modules/.cache",
    "!node_modules/.bin",
    "!src/**/*.ts",
    "!src/**/*.tsx"
  ],
  "extraResources": [
    {
      "from": "public/",
      "to": "public/",
      "filter": ["*.png", "*.ico", "*.jpg", "*.jpeg"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "public/favicon.ico",
    "requestedExecutionLevel": "asInvoker",
    "certificateSubjectName": null,
    "certificateSha1": null,
    "signingHashAlgorithms": ["sha256"],
    "rfc3161TimeStampServer": null,
    "timeStampServer": null,
    "publisherName": "عمران للمبيعات"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/favicon.ico",
    "uninstallerIcon": "public/favicon.ico",
    "installerHeaderIcon": "public/favicon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "عمران للمبيعات",
    "license": null,
    "artifactName": "omran-sales-offline-setup-${version}.${ext}",
    "menuCategory": "عمران للمبيعات",
    "deleteAppDataOnUninstall": false,
    "perMachine": false,
    "runAfterFinish": true,
    "installerLanguages": ["ar", "en"],
    "language": "ar"
  },
  "portable": {
    "artifactName": "omran-sales-offline-portable-${version}.${ext}",
    "splashImage": "public/omran-latest-logo.png"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/favicon.ico",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb", 
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "category": "Office"
  },
  "buildDependenciesFromSource": true,
  "nodeGypRebuild": true,
  "npmRebuild": true,
  "compression": "maximum",
  "removePackageScripts": true,
  "buildVersion": "1.0.0",
  "electronVersion": "28.0.0"
}